generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id Int @id @default(autoincrement())
  title String
  description String
  date DateTime @default(now())
  authorId String // 投稿者のユーザーID
  author User @relation(fields: [authorId], references: [id], onDelete: Cascade) // ユーザーとのリレーション
  imageUrl String?
  favorites Favorite[]
}

model User {
  id String @id // ClerkのユーザーID
  email String
  firstName String?
  lastName String?
  imageUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  posts Post[] // ユーザーが作成した投稿のリレーション
  favorites Favorite[]
}

model Favorite {
  id Int @id @default(autoincrement())
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId Int
  createdAt DateTime @default(now())

  @@unique([userId, postId])
}